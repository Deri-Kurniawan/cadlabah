<!-- end of logout modal -->

<script>
  const logoutModalElement = document.querySelector('#logoutModal');
  logoutModalElement.addEventListener('keyup', (ev) => {
    if (ev.keyCode === 27) {
      document.querySelector('#logoutNoConfirm').click();
    } else if (ev.keyCode === 13) {
      document.querySelector('#logoutYesConfirm').click();
    }
  });
</script>